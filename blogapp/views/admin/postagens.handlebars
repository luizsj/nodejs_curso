<h2>Lista de Postagens</h2>
<hr>
<a href="/admin/postagens/add">
    <button class="btn btn-success">Nova Postagem</button>
</a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>#{{titulo}}</h4>
            <p>Descricao: {{descricao}}</p>
            <p><small>Categoria: {{categoria.nome}}</small></p>
            <p><small>Data: {{data}}</small></p>
            <p><small>Slug: {{slug}}</small></p>
           <p>
           <a href="/admin/postagens/edit/{{_id}}">
                <button class=" btn btn-success mt-2">Editar</button></a> 
           &nbsp;&nbsp;&nbsp;&nbsp;
           <a href="/admin/postagens/deletar/{{_id}}">
                <button class=" btn btn-danger mt-2">Deletar</button>
           </a> 
           </p> 
        </div>
    </div>
{{else}}
    <p>Nenhuma postagem registrada!</p>
{{/each}}